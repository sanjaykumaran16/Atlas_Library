<!DOCTYPE html>
<html>
<head>
    <title>Library Books</title>
    
    <style>
        table {
            width: 90%;
            border-collapse: collapse;
            margin: 20px auto;
            background: #fff;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 16px;
            text-align: center;
            border-bottom: 1px solid #eee;
        }

        th {
            background-color: #4e54c8;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        h1 {
            text-align: center;
            margin-top: 30px;
            color: #4e54c8;
        }
        .return-btn {
    background-color: #4CAF50;
    color: white;
    padding: 6px 12px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}
</style>
</head>
<body>
    <%- include('partials/books.html') %>
    <h1>Books in Your Library</h1>

    <% if (books.length === 0) { %>
        <p>No books available.</p>
    <% } else { %>
        <table border="1">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Rating</th>
                <th>Availability</th>
            </tr>
            <% books.forEach(book => { %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.author || "N/A" %></td>
                    <td><%= book.genre || "N/A" %></td>
                    <td><%= book.isbn || "N/A" %></td>
                    <td><%= book.price || "N/A" %></td>
                    <td><%= book.rating || "N/A" %></td>
                    <td><%= book.availability ? "Available" : "Unavailable" %></td>
                </tr>
            <% }) %>
        </table>
    <% } %>
</body>
</html>
